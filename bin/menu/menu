#!/bin/sh

if [ -f "$HOME/.cache/wal/colors.sh" ]
then
  # import colors from wal
  . "$HOME/.cache/wal/colors.sh"
else
  # set default colors
  background='#020202'
  foreground='#ffffff'
fi

# import font from Xresources
font=`xrdb -query | awk -F'\t' '$1~/^*font:$/{print $2}'`

# call dmenu with custom settings
#dmenu -h 18 -y 22 -l 15 ...

#${DMENU:-dmenu} -i  -b -l 15 -fn "$font" -nb $background -nf $foreground -sb $foreground -sf $background "$@"
${DMENU:-dmenu} -i  -b -l 15 --fn "$font" --nb $background --nf $foreground --sb $foreground --sf $background "$@"

